FROM golang:1.23.0-alpine3.20 AS builder

WORKDIR /app

COPY ./go.* ./
ENV GO111MODULE=on
RUN --mount=type=cache,target=/go/pkg/mod/ \
    --mount=type=bind,source=go.sum,target=go.sum \
    --mount=type=bind,source=go.mod,target=go.mod \
    go mod download -x

# Copy the rest of your application
COPY . .

# Build your application to binary
ENV GOCACHE=/root/.cache/go-build
RUN --mount=type=cache,target=/go/pkg/mod/ \
    --mount=type=cache,target="/root/.cache/go-build" \
    --mount=type=bind,target=. \
    CGO_ENABLED=0 GOOS=linux go build -o /bin/api-web-binary ./api/web/main.go


# Copy necessary config file
FROM gcr.io/distroless/static:nonroot
WORKDIR /app/
COPY --from=builder /bin/api-web-binary /bin/api-web-binary
COPY --from=builder --chown=nonroot /app/lang /app/lang
COPY --from=builder --chown=nonroot /app/env /app/env
ENTRYPOINT ["/bin/api-web-binary"]
EXPOSE 4000
